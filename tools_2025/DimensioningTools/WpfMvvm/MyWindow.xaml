<Window x:Class="DimensioningTools.MyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimensioningTools"
        mc:Ignorable="d"
        Title="-" Height="300" Width="210" Topmost="True">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="±0.000绝对标高(米)" HorizontalAlignment="Left" VerticalAlignment="Top"  Height="25" />
                <TextBox  x:Name="sealeveltextbox" HorizontalAlignment="Left" Height="25" Text="0.0"  VerticalContentAlignment="Center"  Width="50" />
            </StackPanel>
            <StackPanel>
                <Label Content="选择高程点" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="300" Grid.ColumnSpan="2" />
                <ListBox  x:Name="spotdimensionlistbox"  HorizontalAlignment="Left" Height="180" VerticalAlignment="Top" Width="300" Grid.ColumnSpan="2" SelectionMode="Extended" />
                <Button Margin="5" Content="确认"  HorizontalAlignment="Right"  Click="Button_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
