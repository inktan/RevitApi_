<Window x:Class="SviPicDedupTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="图片去重工具 V1.0" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing" Icon="/Revit.ico" >
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="图片去重工具" 
                   FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- 文件夹选择 -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="选择文件夹:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="1" Grid.Column="0" x:Name="FolderPathTextBox" 
                 IsReadOnly="True" Margin="100,0,0,0" Height="25"/>
        <Button Grid.Row="1" Grid.Column="1" x:Name="SelectFolderButton" 
                Content="选择文件夹" Click="SelectFolderButton_Click" Width="80" Height="25" Margin="10,0,0,0"/>

        <!-- 文件夹路径显示 -->
        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" x:Name="FolderPathTextBlock" 
                   TextWrapping="Wrap" Margin="0,10,0,10" Foreground="Gray"/>

        <!-- 统计信息 -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10,0,10">
            <TextBlock Text="图片总数:" FontWeight="Bold"/>
            <TextBlock x:Name="TotalImagesText" Text="0" FontWeight="Bold" Margin="10,0,0,0" Foreground="Blue"/>
            <TextBlock Text="重复图片:" FontWeight="Bold" Margin="20,0,0,0"/>
            <TextBlock x:Name="DuplicateImagesText" Text="0" FontWeight="Bold" Margin="10,0,0,0" Foreground="Red"/>
            <TextBlock Text="当前组:" FontWeight="Bold" Margin="20,0,0,0"/>
            <TextBlock x:Name="CurrentGroupText" Text="0/0" FontWeight="Bold" Margin="10,0,0,0" Foreground="Green"/>
        </StackPanel>

        <!-- 进度条 -->
        <ProgressBar Grid.Row="4" Grid.ColumnSpan="2" x:Name="ProgressBar" 
                     Height="20" Margin="0,10,0,10" Minimum="0" Maximum="100" Value="0"/>
        <TextBlock Grid.Row="4" Grid.ColumnSpan="2" x:Name="ProgressText" 
                   Text="等待开始..." HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Foreground="White" FontWeight="Bold"/>

        <!-- 日志输出 -->
        <GroupBox Grid.Row="5" Grid.ColumnSpan="2" Header="处理日志" Margin="0,10,0,10">
            <TextBox x:Name="LogTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
        </GroupBox>

        <!-- 操作按钮 -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="StartButton" Content="开始去重" Click="StartButton_Click" 
                    Width="80" Height="30" Margin="5" Background="LightGreen"/>
            <Button x:Name="PauseButton" Content="暂停" Click="PauseButton_Click" 
                    Width="80" Height="30" Margin="5" Background="LightYellow" IsEnabled="False"/>
            <Button x:Name="StopButton" Content="停止" Click="StopButton_Click" 
                    Width="80" Height="30" Margin="5" Background="LightCoral" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>